<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="56dp"
    tools:context=".Fragments.SearchFragment">

    <EditText
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:textColor="@color/regular"
        android:background="@drawable/search_bg"
        android:hint="Search User here.."
        android:layout_margin="10dp"
        android:fontFamily="@font/primary"
        android:drawableLeft="@drawable/search_small_icon"
        tools:ignore="HardcodedText" />

    <TableLayout
        android:id="@+id/table_layout"
        android:visibility="gone"
        android:layout_below="@id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dog"
                    android:layout_width="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:text="DOG"
                    android:gravity="center"
                    android:fontFamily="@font/primary"
                    android:textColor="@color/secondary"
                    android:padding="10dp"
                    android:background="@drawable/search_bg"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/cat"
                    android:layout_toRightOf="@id/dog"
                    android:layout_marginStart="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="CAT"
                    android:gravity="center"
                    android:fontFamily="@font/primary"
                    android:textColor="@color/secondary"
                    android:padding="10dp"
                    android:background="@drawable/search_bg"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/birds"
                    android:layout_toRightOf="@id/cat"
                    android:layout_marginStart="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DOG"
                    android:gravity="center"
                    android:fontFamily="@font/primary"
                    android:textColor="@color/secondary"
                    android:padding="10dp"
                    android:background="@drawable/search_bg"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_layout"
        android:layout_marginTop="10dp"
        android:id="@+id/recycleView"/>

    <TextView
        android:id="@+id/notFoundTxt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User not found.."
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/primary"
        tools:ignore="HardcodedText" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_78RTg8.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie"
        android:hint="Find Pet Adoption User"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/primary"
        tools:ignore="HardcodedText" />

</RelativeLayout>